{
  "collection": "secrets",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "secretId",
        "storeId",
        "scopeType",
        "scopeId",
        "name",
        "type",
        "ciphertext",
        "encryptionMeta",
        "createdBy",
        "createdAt"
      ],
      "properties": {
        "_id": {},
        "secretId": {
          "bsonType": "string"
        },
        "storeId": {
          "bsonType": "string"
        },
        "scopeType": {
          "bsonType": "string",
          "enum": [
            "project",
            "resource",
            "user"
          ]
        },
        "scopeId": {
          "bsonType": "string"
        },
        "name": {
          "bsonType": "string"
        },
        "type": {
          "bsonType": "string",
          "enum": [
            "ssh_key",
            "env",
            "api_key",
            "cert",
            "db_password"
          ]
        },
        "ciphertext": {
          "bsonType": "string"
        },
        "encryptionMeta": {
          "bsonType": "object"
        },
        "createdBy": {
          "bsonType": "string"
        },
        "createdAt": {
          "bsonType": "date"
        }
      }
    }
  }
}