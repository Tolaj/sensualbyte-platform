{
  "collection": "secrets",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": ["secretId", "storeId", "scopeType", "scopeId", "name", "type", "ciphertext", "encryptionMeta", "createdBy", "createdAt"],
      "properties": {
        "_id": {},
        "secretId": { "bsonType": "string" },
        "storeId": { "bsonType": "string" },

        "scopeType": { "bsonType": "string", "enum": ["project", "resource", "user"] },
        "scopeId": { "bsonType": "string" },

        "name": { "bsonType": "string" },
        "type": { "bsonType": "string", "enum": ["ssh_key", "env", "api_key", "cert"] },

        "ciphertext": { "bsonType": "string" },
        "encryptionMeta": {
          "bsonType": "object",
          "required": ["alg", "keyId", "iv", "tag"],
          "properties": {
            "alg": { "bsonType": "string" },
            "keyId": { "bsonType": "string" },
            "iv": { "bsonType": "string" },
            "tag": { "bsonType": "string" }
          }
        },

        "createdBy": { "bsonType": "string" },
        "createdAt": { "bsonType": "date" }
      }
    }
  }
}
