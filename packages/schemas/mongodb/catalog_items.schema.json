{
  "collection": "catalog_items",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "catalogId",
        "categoryId",
        "name",
        "kind",
        "defaults",
        "createdAt",
        "updatedAt"
      ],
      "properties": {
        "_id": {},
        "catalogId": {
          "bsonType": "string"
        },
        "categoryId": {
          "bsonType": "string"
        },
        "name": {
          "bsonType": "string"
        },
        "description": {
          "bsonType": [
            "string",
            "null"
          ]
        },
        "kind": {
          "bsonType": "string",
          "enum": [
            "compute",
            "bucket",
            "volume",
            "http_route",
            "postgres",
            "observability",
            "mqtt"
          ]
        },
        "defaults": {
          "bsonType": "object"
        },
        "inputSchema": {
          "bsonType": [
            "object",
            "null"
          ]
        },
        "components": {
          "bsonType": [
            "array",
            "null"
          ]
        },
        "createdAt": {
          "bsonType": "date"
        },
        "updatedAt": {
          "bsonType": "date"
        }
      }
    }
  }
}