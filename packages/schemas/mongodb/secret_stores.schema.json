{
  "collection": "secret_stores",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": [
        "storeId",
        "type",
        "config",
        "active",
        "createdAt"
      ],
      "properties": {
        "_id": {},
        "storeId": {
          "bsonType": "string"
        },
        "type": {
          "bsonType": "string",
          "enum": [
            "local_encrypted_db",
            "s3_compatible",
            "vault"
          ]
        },
        "config": {
          "bsonType": "object"
        },
        "active": {
          "bsonType": "bool"
        },
        "createdAt": {
          "bsonType": "date"
        }
      }
    }
  }
}